<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<Configurations>Debug;Release;Legacy;Release + Docs</Configurations>
	</PropertyGroup>

	<!-- Debug configuration for .NET 9, using the latest C# version -->
	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<TargetFramework>net9.0-windows</TargetFramework>
	</PropertyGroup>

	<!-- Release configuration for .NET 9, using the latest C# version -->
	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<TargetFramework>net9.0-windows</TargetFramework>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)'=='Release + Docs'">
	  <TargetFramework>net9.0-windows</TargetFramework>
	</PropertyGroup>
	
	<PropertyGroup Condition="'$(Configuration)'=='Legacy'">
	  <TargetFramework>net9.0</TargetFramework>
	</PropertyGroup>
	
	<ItemGroup>
	  <PackageReference Include="Automata.Visualization" Version="1.0.1" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\MathLib.Experimental\MathLib.Experimental.csproj" />
	  <ProjectReference Include="..\MathLib\MathLib.csproj" />
	</ItemGroup>

</Project>
